/dts-v1/;
/plugin/;

&pfc {
	msiof3_pins: msiof3 {
		groups = "msiof3_clk_a", "msiof3_sync_a",
			 "msiof3_rxd_a", "msiof3_txd_a";
		function = "msiof3";
	};
};

&msiof3 {
	pinctrl-0 = <&msiof3_pins>;
	pinctrl-names = "default";

	status = "okay";

	spi-slave;
};
